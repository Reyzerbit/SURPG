package com.reyzerbit.fetchDataClasses;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

import com.reyzerbit.Feats;

public class SetNewData {

	public static void set(File newFileSet){
		
		JSONParser parser = new JSONParser();
        try {
        	
			Object objLoad = parser.parse(new FileReader(newFileSet));
            JSONObject jsonObject = (JSONObject) objLoad; 
            
            jsonObject.put("Recent", 0);
            jsonObject.put("Location", null);
            jsonObject.put("Gem Type", null);
            jsonObject.put("Gem Placement", null);
            
            try(FileWriter saveData = new FileWriter(newFileSet)){
    	        saveData.write(jsonObject.toJSONString());
    	        
    		} catch (IOException e) {
    			e.printStackTrace();
    		} 
            
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		} catch (ParseException e) {
			e.printStackTrace();
		}
		
	}
	
}
