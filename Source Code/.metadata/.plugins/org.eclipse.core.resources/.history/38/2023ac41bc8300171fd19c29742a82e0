package com.reyzerbit.guis;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;

import javax.swing.JPanel;

public class HealthRectangle extends JPanel{

	private static final long serialVersionUID = 1L;
	
	public void paintComponent(Graphics g, int healthAmmount) {
	    super.paintComponent(g);
	    g.drawRect(0,0,65,30);  
	    g.setColor(Color.RED);  
	    g.fillRect(0,0,healthAmmount,30);  
	  }

	  public Dimension getPreferredSize() {
	    return new Dimension(65, 30);
	  }

}
